{
  "name": "rinkeby",
  "version": "1.0.0",
  "scripts": {
    "hardhat-start": "hardhat node",
    "lint:all": "yarn workspaces foreach -p run lint",
    "clean:all": "yarn workspaces foreach -p run clean",
    "compile:all": "yarn workspaces foreach -pt run compile",
    "test:all": "yarn workspaces foreach -t -j 1 run test",
    "g:clean": "cd $INIT_CWD && rimraf build",
    "g:tslint": "cd $INIT_CWD && tslint --format verbose \"src/**/*.ts\"",
    "g:pretty": "cd $INIT_CWD && prettier --write \"./**/*.{ts,tsx,js,jsx,json}\"",
    "g:tslint-fix": "cd $INIT_CWD && yarn g:tslint --fix",
    "g:compile": "cd $INIT_CWD && echo $INIT_CWD && tsc -v && tsc --pretty",
    "g:compile-watch": "cd $INIT_CWD && tsc --pretty -w",
    "g:clean-compile": "cd $INIT_CWD && yarn g:clean && yarn g:compile",
    "g:clean-lint-compile": "cd $INIT_CWD && yarn g:clean && yarn g:tslint && yarn g:compile",
    "g:depcheck": "cd $INIT_CWD && depcheck",
    "g:test": "cd $INIT_CWD && CONF_FILE=$INIT_CWD/build/config/config_test.js mocha --full-trace --recursive --exit --require source-map-support/register --ui f-mocha 'build/test/**/*.spec.js'",
    "g:test-watch": "cd $INIT_CWD && CONF_FILE=$INIT_CWD/build/config/config_test.js mocha -w -R spec --full-trace --recursive --require source-map-support/register --ui f-mocha 'build/test/**/*.spec.js'",
    "g:coverage": "cd $INIT_CWD && CONF_FILE=$INIT_CWD/build/config/config_test.js nyc mocha --full-trace --recursive --require source-map-support/register --ui f-mocha 'build/test/**/*.spec.js'",
    "g:solhint": "cd $INIT_CWD && solhint -q contracts/**/*.sol",
    "g:solhint-fix": "cd $INIT_CWD && solhint --fix contracts/**/*.sol",
    "g:hardhat-compile": "cd $INIT_CWD && hardhat compile",
    "g:hardhat-test": "cd $INIT_CWD && hardhat test",
    "g:hardhat-coverage": "cd $INIT_CWD && hardhat coverage",
    "g:hardhat-deploy-localhost": "cd $INIT_CWD && hardhat deploy --network localhost --export deployments/localhost.json",
    "g:hardhat-deploy-goerli": "cd $INIT_CWD && hardhat deploy --network goerli --export deployments/goerli.json",
    "g:typechain-web3": "cd $INIT_CWD && typechain --target=web3-v1 --out-dir types/web3 'artifacts/!(build-info)/**/!(*.dbg).json'"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@typechain/hardhat": "^6.1.2",
    "@typechain/truffle-v5": "^8.0.1",
    "@typechain/web3-v1": "^6.0.1",
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.11",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^10.0.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^18.8.4",
    "@yarnpkg/cli": "^2.4.0",
    "@yarnpkg/core": "^2.4.0",
    "chai": "^4.2.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.12.0",
    "hardhat-deploy": "^0.11.18",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "^10.1.0",
    "npm": "^7.6.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.0",
    "ts-loader": "^6.2.2",
    "ts-node": "^10.9.1",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-microsoft-contrib": "^6.2.0",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4",
    "yargs": "^16.2.0"
  },
  "resolutions": {
    "@types/react": "17.0.14",
    "@types/react-dom": "17.0.14"
  },
  "author": "teddy.chambard@gmail.com",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.1.1",
  "dependencies": {
    "@nomiclabs/hardhat-truffle5": "^2.0.7",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "web3": "^1.8.0"
  }
}
